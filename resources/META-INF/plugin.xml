<idea-plugin>
  <id>com.fisk.twig</id>
  <name>Twig</name>
  <version>0.1</version>
  <vendor email="myself@fiskie.me" url="http://fiskie.me">fisk</vendor>

  <depends>com.intellij.modules.lang</depends>
  <depends optional="true">PHP</depends>

  <description><![CDATA[
      Improved and open-source Twig support for IntelliJ IDEA.
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <idea-version since-build="145.0"/>

  <extensions defaultExtensionNs="com.intellij">
    <braceMatcher filetype="Twig" implementationClass="com.fisk.twig.editor.braces.TwigBraceMatcher"/>
    <breadcrumbsInfoProvider implementation="com.fisk.twig.editor.breadcrumbs.TwigBreadcrumbsInfoProvider" />
    <codeFoldingOptionsProvider instance="com.fisk.twig.config.TwigFoldingOptionsProvider"/>
    <!--<codeStyleSettingsProvider implementation="com.fisk.twig.pages.TwigCodeStyleSettingsProvider"/>-->

    <colorSettingsPage implementation="com.fisk.twig.pages.TwigColorsPage"/>
    <completion.contributor language="Twig" implementationClass="com.fisk.twig.completion.TwigCompletionContributor" />
    <defaultLiveTemplatesProvider implementation="com.fisk.twig.editor.templates.TwigLiveTemplatesProvider"/>
    <enterHandlerDelegate implementation="com.fisk.twig.editor.actions.TwigEnterHandler"/>
    <fileIndentOptionsProvider implementation="com.fisk.twig.format.TwigFileIndentOptionsProvider"/>
    <fileTypeFactory implementation="com.fisk.twig.file.TwigFileTypeFactory"/>
    <highlightErrorFilter implementation="com.fisk.twig.inspections.TwigErrorFilter"/>
    <html.scriptContentProvider language="Twig" implementationClass="com.fisk.twig.TwigScriptContentProvider"/>
    <!--<langCodeStyleSettingsProvider implementation="com.fisk.twig.pages.TwigLanguageCodeStyleSettingsProvider"/>-->
    <lang.commenter language="Twig" implementationClass="com.fisk.twig.editor.comments.TwigCommenterManager"/>
    <lang.fileViewProviderFactory language="Twig" implementationClass="com.fisk.twig.file.TwigFileViewProviderFactory"/>
    <lang.findUsagesProvider language="Twig" implementationClass="com.fisk.twig.ide.TwigFindUsagesProvider"/>
    <lang.foldingBuilder language="Twig" implementationClass="com.fisk.twig.editor.folding.TwigFoldingBuilder"/>
    <lang.formatter language="Twig" implementationClass="com.fisk.twig.format.TwigFormattingModelBuilder"/>
    <lang.parserDefinition language="Twig" implementationClass="com.fisk.twig.parsing.TwigParserDefinition" />
    <lang.psiStructureViewFactory language="Twig" implementationClass="com.fisk.twig.structure.TwigStructureViewFactory" />
    <lang.syntaxHighlighterFactory language="Twig" implementationClass="com.fisk.twig.TwigHighlighterFactory"/>
    <liveTemplateContext implementation="com.fisk.twig.editor.templates.TwigTemplateContextType"/>
    <!--<projectConfigurable groupId="language" provider="com.fisk.twig.pages.TwigConfigurationProvider" />-->
    <psi.referenceContributor implementation="com.fisk.twig.psi.reference.ReferenceContributor" />
    <typedHandler implementation="com.fisk.twig.editor.actions.TwigTypedHandler" order="before xmlSlash"/>
    <backspaceHandlerDelegate implementation="com.fisk.twig.editor.actions.TwigBackspaceHandler" order="before xmlSlash"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>
</idea-plugin>